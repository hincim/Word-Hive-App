<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.hakanninc.weatherapp.view.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/weatherInfoFragment"
        android:name="com.hakanninc.weatherapp.view.WeatherInfoFragment" />
    <fragment
        android:id="@+id/commFragment"
        android:name="com.hakanninc.weatherapp.view.CommFragment"
        android:label="fragment_comm"
        tools:layout="@layout/fragment_comm" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.hakanninc.weatherapp.view.SplashFragment"
        android:label="fragment_splash"
        tools:layout="@layout/fragment_splash" >
        <action
            android:id="@+id/action_splashFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
    <fragment
        android:id="@+id/toolsFragment"
        android:name="com.hakanninc.weatherapp.view.ToolsFragment"
        android:label="fragment_tools"
        tools:layout="@layout/fragment_tools" >
        <action
            android:id="@+id/action_toolsFragment_to_weatherInfoFragment"
            app:destination="@id/weatherInfoFragment" />
        <action
            android:id="@+id/action_toolsFragment_to_wordMeanFragment"
            app:destination="@id/wordMeanFragment" />
        <action
            android:id="@+id/action_toolsFragment_to_movieFragment"
            app:destination="@id/movieFragment" />
    </fragment>
    <fragment
        android:id="@+id/wordMeanFragment"
        android:name="com.hakanninc.weatherapp.view.WordMeanFragment"
        android:label="fragment_word_mean"
        tools:layout="@layout/fragment_word_mean" />
    <fragment
        android:id="@+id/movieFragment"
        android:name="com.hakanninc.weatherapp.view.MovieFragment"
        android:label="fragment_movie"
        tools:layout="@layout/fragment_movie" >
        <action
            android:id="@+id/action_movieFragment_to_movieDetailFragment"
            app:destination="@id/movieDetailFragment" />
    </fragment>
    <fragment
        android:id="@+id/movieDetailFragment"
        android:name="com.hakanninc.weatherapp.view.MovieDetailFragment"
        android:label="fragment_movie_detail"
        tools:layout="@layout/fragment_movie_detail" >
        <argument
            android:name="movie_id"
            app:argType="string" />
    </fragment>
</navigation>